{
  "info": {
    "_postman_id": "burger-marina-collection",
    "name": "BurgerMarina API - Full Test Suite",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.1.0"
  },
  "item": [
    {
      "name": "Setup - Install (create admin)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{}" },
        "url": { "raw": "{{base_url}}/api/install.php", "host": ["{{base_url}}"], "path": ["api","install.php"] }
      },
      "event": [ {
        "listen": "test",
        "script": {
          "type": "text/javascript",
          "exec": [
            "pm.test('Install responds 200', function () { pm.expect(pm.response.code).to.be.oneOf([200,201,204]); });",
            "pm.environment.set('adminEmail','admin@test.com');",
            "pm.environment.set('adminPass','1234');"
          ]
        }
      } ]
    },
    {
      "name": "Auth - Login Admin",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{adminEmail}}\",\n  \"password\": \"{{adminPass}}\"\n}"
        },
        "url": { "raw": "{{base_url}}/api/login.php", "host": ["{{base_url}}"], "path": ["api","login.php"] }
      },
      "event": [ {
        "listen": "test",
        "script": {
          "type": "text/javascript",
          "exec": [
            "pm.test('Login successful (200)', function () { pm.response.to.have.status(200); });",
            "var json; try { json = pm.response.json(); } catch (e) { json = {}; }",
            "if (json.token) { pm.environment.set('token', json.token); }",
            "pm.test('Token is set', function () { pm.expect(pm.environment.get('token')).to.not.be.undefined; });"
          ]
        }
      } ]
    },
    {
      "name": "Auth - Login Invalid",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"noexist@test.com\",\n  \"password\": \"badpass\"\n}" },
        "url": { "raw": "{{base_url}}/api/login.php", "host": ["{{base_url}}"], "path": ["api","login.php"] }
      },
      "event": [ { "listen": "test", "script": { "type": "text/javascript", "exec": [ "pm.test('Invalid login returns 401', function () { pm.expect(pm.response.code).to.be.oneOf([400,401]); });" ] } } ]
    },
    {
      "name": "Auth - Me (with token)",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{base_url}}/api/me.php", "host": ["{{base_url}}"], "path": ["api","me.php"] }
      },
      "event": [ { "listen": "test", "script": { "type": "text/javascript", "exec": [ "pm.test('Me returns 200 and rol present', function () { pm.response.to.have.status(200); var j = pm.response.json(); pm.expect(j.rol).to.not.be.undefined; });" ] } } ]
    },
    {
      "name": "Platos - Get All (public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/api/platos.php", "host": ["{{base_url}}"], "path": ["api","platos.php"] }
      },
      "event": [ { "listen": "test", "script": { "type": "text/javascript", "exec": [ "pm.test('List platos returns 200', function () { pm.response.to.have.status(200); });" ] } } ]
    },
    {
      "name": "Platos - Stats (count)",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/api/platos.php?count=1", "host": ["{{base_url}}"], "path": ["api","platos.php"], "query": [ { "key": "count", "value": "1" } ] }
      },
      "event": [ { "listen": "test", "script": { "type": "text/javascript", "exec": [ "pm.test('Count returns 200', function () { pm.response.to.have.status(200); });" ] } } ]
    },
    {
      "name": "Platos - Create (authorized)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"nombre\": \"Plato prueba {{$randomInt}}\",\n  \"descripcion\": \"Creado por suite de pruebas\",\n  \"precio\": 7.5\n}" },
        "url": { "raw": "{{base_url}}/api/platos.php", "host": ["{{base_url}}"], "path": ["api","platos.php"] }
      },
      "event": [ {
        "listen": "test",
        "script": {
          "type": "text/javascript",
          "exec": [
            "pm.test('Create returns 200/201', function () { pm.expect(pm.response.code).to.be.oneOf([200,201]); });",
            "var json = {}; try { json = pm.response.json(); } catch(e){}",
            "if (json.id) pm.environment.set('createdPlatoId', json.id);",
            "if (json.data && json.data.id) pm.environment.set('createdPlatoId', json.data.id);",
            "pm.test('createdPlatoId saved', function () { pm.expect(pm.environment.get('createdPlatoId')).to.not.be.undefined; });"
          ]
        }
      } ]
    },
    {
      "name": "Platos - Create (unauthorized)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"nombre\": \"Plato no auth\",\n  \"precio\": 1\n}" },
        "url": { "raw": "{{base_url}}/api/platos.php", "host": ["{{base_url}}"], "path": ["api","platos.php"] }
      },
      "event": [ { "listen": "test", "script": { "type": "text/javascript", "exec": [ "pm.test('Create without token returns 401', function () { pm.expect(pm.response.code).to.be.oneOf([401,403]); });" ] } } ]
    },
    {
      "name": "Platos - Get By Id",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/api/platos.php?id={{createdPlatoId}}", "host": ["{{base_url}}"], "path": ["api","platos.php"], "query": [ { "key": "id", "value": "{{createdPlatoId}}" } ] }
      },
      "event": [ { "listen": "test", "script": { "type": "text/javascript", "exec": [ "pm.test('Get by id returns 200 or 404', function () { pm.expect(pm.response.code).to.be.oneOf([200,404]); });" ] } } ]
    },
    {
      "name": "Platos - Update (authorized)",
      "request": {
        "method": "PUT",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"nombre\": \"Plato actualizado por tests\",\n  \"precio\": 10\n}" },
        "url": { "raw": "{{base_url}}/api/platos.php?id={{createdPlatoId}}", "host": ["{{base_url}}"], "path": ["api","platos.php"], "query": [ { "key": "id", "value": "{{createdPlatoId}}" } ] }
      },
      "event": [ { "listen": "test", "script": { "type": "text/javascript", "exec": [ "pm.test('Update returns 200 or 403 if not admin', function () { pm.expect(pm.response.code).to.be.oneOf([200,403]); });" ] } } ]
    },
    {
      "name": "Platos - Delete (authorized)",
      "request": {
        "method": "DELETE",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "{{baseUrl}}/api/platos.php?id={{createdPlatoId}}", "host": ["{{baseUrl}}"], "path": ["api","platos.php"], "query": [ { "key": "id", "value": "{{createdPlatoId}}" } ] }
      },
      "event": [ { "listen": "test", "script": { "type": "text/javascript", "exec": [ "pm.test('Delete returns 200/204/404', function () { pm.expect(pm.response.code).to.be.oneOf([200,204,404]); });", "pm.environment.unset('createdPlatoId');" ] } } ]
    }
  ],
  "event": [],
  "variable": []
}
